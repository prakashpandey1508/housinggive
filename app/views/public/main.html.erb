<div class="row">
  <% @properties.each do |property| %>
    <% if property.images.attached? %> 
      <% (0...property.images.count).each do |image| %>
        <% if user_signed_in? || agent_signed_in? %>
          <!-- <div class="column">
            <%= link_to(image_tag(property.images[image],style:"width:400px;height;700px;"), property_path(property)) %>
          </div> -->


             <div class="column">
            <div class="card" style="width: 18rem;">
              <%= image_tag(property.images[image], class: "card-img-top", alt: "Card image cap") %>
              <div class="card-body">
                <h5 class="card-title"><%= property.name %></h5>
                <p class="card-text"><%= property.address %></p>
                <%= link_to "View Details", property_path(property), class: "btn btn-primary" , style: "text-decoration: none;"%>
              </div>
            </div>
          </div>



        <% else %>
          <div class="column">
            <div class="card" style="width: 18rem;">
              <%= image_tag(property.images[image], class: "card-img-top", alt: "Card image cap") %>
              <div class="card-body">
                <h5 class="card-title"><%= property.name %></h5>
                <p class="card-text"><%= property.address %></p>
                <%= link_to "View Details", property_path(property), class: "btn btn-primary" , style: "text-decoration: none;"%>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
