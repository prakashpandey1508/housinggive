<div class="container-fluid">
  <%= render "layouts/nav/sidebardashboard" %>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
        
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
            <h1 class="h2">Properties</h1>
            
          </div>
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>id</th>
                  <th>Name of the properties</th>
                  <th>Show</th>
                  <th>Edit</th>
                  <th>Destroy</th>
                </tr>
              </thead>
              <tbody>
              <% @properties.each do |pt| %>
                <tr>
                <th scope="row"><%= pt.id%></th>
                  <td><%= pt.name %></td>
                 <td> <%= link_to 'show', property_path(pt) %> </td>
                 <td> <%= link_to 'edit', edit_property_path(pt) %> </td>
                 <td><%= button_to 'remove',property_path(pt),method:'delete',data:"are you confirm" %></td>
                </tr>
                <%end%>
              </tbody>
            </table>
            <%= link_to 'new property',new_property_path ,class:"btm btn-primary"%>
          </div>
        </main>
      </div>
    </div>







  
    
