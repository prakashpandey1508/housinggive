
<h1 style="text-align:center;color:green;">
            Agents  index page
        </h1>

    <table class="table table-bordered border-primary">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name of agent</th>
      <th scope="col">Edit Agent</th>
      <th scope="col">Remove Agent</th>
    </tr>
  </thead>

     <%if user_signed_in? %>
     <% @agents.each do |std| %>


     <tbody>
    <tr>
    
      <th scope="row"><%= std.id%></th>
      <td><%= link_to std.name, agent_path(std)%></td>

      <td><%= button_to 'Edit',edit_agent_path(std),method:'get' %></td>
      <td><%= button_to 'remove',agent_path(std),method:'delete',data:"are you confirm" %></td>
     
    </tr>
   
  </tbody>

  <%end %>
  <%else%>


   
  <% @agents.each do |std| %>

  <% if std.id == current_agent.id %>
  <tbody>
    <tr>
    
      <th scope="row"><%= std.id%></th>
      <td><%= link_to std.name, agent_path(std)%></td>

      <td><%= button_to 'Edit',edit_agent_path(std),method:'get' %></td>
      <td><%= button_to 'remove',agent_path(std),method:'delete',data:"are you confirm" %></td>
     
    </tr>
   
  </tbody>

  <%end %>
  <%end%>
  <%end%>
  
  
</table>



